<UserControl x:Class="ControlSystem.MVVM.Views.BedroomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlSystem.MVVM.Views"
             xmlns:components="clr-namespace:ControlSystem.Components"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <Border x:Name="Bedroom" Style="{StaticResource PageBorder}">
        <Border.Background>
            <ImageBrush Stretch="Fill" ImageSource="../../Assets/Images/Bedroom.jpg"/>
        </Border.Background>
        
        <components:ViewContent/>
        
    </Border>
</UserControl>
