<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="PageBorder" TargetType="Border">
        <Setter Property="Background" Value="AntiqueWhite"/>
        <Setter Property="CornerRadius" Value="10"/>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" BlurRadius="20" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="PageHeader" TargetType="Border" BasedOn="{StaticResource PageBorder}">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>


    <Style x:Key="HeaderTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="70"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>